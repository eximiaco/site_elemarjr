.card
    &--event
        & ^[0]__wrapper
            color $black
            font-weight bold
            position relative
            text-transform uppercase

        & ^[0]__date
            font-size 20px

        & ^[0]__image
            height 80px
            max-width calc( 50% - 25px )

            img
                height auto
                max-height 100%
                max-width 100%
                width auto

        & ^[0]__title
            color $black
            font-size 16px
            letter-spacing 1px

        & ^[0]__footer
            font-weight 100
            text-transform none

        & ^[0]__role
            color $dusky-blue
            font-size 12px

    &--event&--active
        background $dusky-blue

        & ^[0]__date,
        & ^[0]__title
            color $white

        & ^[0]__role,
        & ^[0]__footer
            color $black

    &--old
        & ^[0]__date
        & ^[0]__title,
        & ^[0]__footer
            color $gray-light-300

        & ^[0]__role
            color $tiffany
