.index-tags
    background $dusky-blue
    position fixed
    top $sm-nav-height
    transition top $transition-default
    width 100%
    z-index 100

    @media screen and ( min-width $nav-breakpoint )
        top $sm-nav-height-breakpoint

    /.sticky &
        top $sm-nav-height-sticky

    // Toggler

    &__toggler
        border 2px solid $dusky-blue
        bottom -38px
        color $dusky-blue
        font-size 2rem
        height 38px
        line-height 38px
        position absolute
        right 0
        text-align center
        width 46px

        @media screen and ( min-width $screen-sm )
            background $denim-blue
            border none
            bottom auto
            color $white
            top 0

        @media screen and ( min-width $screen-md )
            display none

    // Current

    &__current
        align-items center
        background $dusky-blue
        display flex
        padding 0 15px

        @media screen and ( min-width $screen-sm )
            padding-right 61px

    // Navigation

    &__nav
        color $white
        font-size 1.5rem
        line-height 1
        width 16px

        &--right
            margin-left 15px

        &--left
            margin-right 15px

    // List

    &__list
        display none
        list-style none
        margin 0
        padding 0

        &--open
            display block

    &__item,
    &__current-title
        border-bottom 1px solid $dusky-blue
        font-size 18px
        line-height 1
        padding 10px 0

        &:last-child
            border-bottom none

        a
            color $white
            display block
            text-decoration none

    &__item
        background $denim-blue
        padding 10px 15px 10px 46px

    &__current-title
        border-bottom none
        margin 0 auto 0 0
