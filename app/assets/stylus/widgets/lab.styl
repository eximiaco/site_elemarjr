.card
    &--lab
        & ^[0]__title
            font-size 20px

        & ^[0]__thumbnail
            margin-top - $card-box-padding
            max-width 64px

        & ^[0]__button
            padding-left 1.875rem

        &__button
            &-note
                color $black
                font-size 1.875rem
                left -6px
                position absolute
                top 50%
                transform translateY( -50% )

        &__repository
            color $black
            display block
            text-decoration none

            .i-github
                font-size 1.875rem

        & ^[0]__footer
            align-items center
            display flex
            justify-content space-between

        &__tags
            display flex

        &__langs
            list-style none
            margin 0
            padding 0

            &-item
                display inline-block
                margin-left 4px

                a
                    color $tiffany
                    font-weight bold
                    text-decoration none

.labs
    margin-bottom 80px
