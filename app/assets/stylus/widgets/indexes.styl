.indexes
    background $dusky-blue
    padding 30px 0
    position fixed
    width 100%
    top $sm-nav-height
    transition top $transition-default

    @media screen and ( min-width $nav-breakpoint )
        top $sm-nav-height-breakpoint

    /.sticky &
        top $sm-nav-height-sticky


    &__container
		align-items center
        display flex
        justify-content space-between

    &__nav
        color $white
        font-size 1.5rem
        line-height 1

    &__list
        display flex
        list-style none
        justify-content space-between
        margin 0
        padding 0

    &__item
        border-bottom 1px solid $white
        font-size 18px
        padding-bottom 10px

        a
            display block
            color $white
            text-decoration none
