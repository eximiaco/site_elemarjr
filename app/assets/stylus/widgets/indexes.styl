.indexes
    $toggler-width    = 46px
    $toggler-height   = 38px
    $toggler-width-sm = 66px

    $nav-arrow-width = 38px

    background $dusky-blue
    position fixed
    top $sm-nav-height
    transition top $transition-default
    width 100%
    z-index 100

    /.sticky &
        top $sm-nav-height-sticky

    @media screen and ( min-width $screen-md )
        padding 30px 0

    // Container

    &__container
        display flex
        flex-wrap wrap
        padding 0
        position relative

        @media screen and ( min-width $screen-md )
            padding-left $container-padding
            padding-right $container-padding

        @media screen and ( min-width $screen-lg )
            display block

        a
            color $white
            text-decoration none

    // Nav

    &__nav
        align-items center
        color $white
        cursor pointer
        display flex
        font-size 2rem
        height 100%
        justify-content center
        position absolute
        top 50%
        transform translateY( -50% )
        width $nav-arrow-width
        z-index 10

        &--prev
            left 0

        &--next
            right 0

        &--disabled
            opacity .5

    // Swiper

    &__swiper
        &-wrapper
            //

        &-container
            @media screen and ( min-width $screen-sm )
                width 'calc( 100% - %s )' % $toggler-width-sm

            @media screen and ( min-width $screen-lg )
                width 100%


    // Toggler

    &__toggler
        align-items center
        border 2px solid $dusky-blue
        bottom - $toggler-height
        color $dusky-blue
        display flex
        font-size .625rem
        height $toggler-height
        justify-content center
        position absolute
        right 0
        width $toggler-width

        @media screen and ( min-width $screen-sm )
            background $denim-blue
            border-color $denim-blue
            color $white
            height auto
            position static
            width $toggler-width-sm

        @media screen and ( min-width $screen-md )
            display none

    // Item

    &__item
        padding-bottom 10px
        padding-top 10px
        text-align center
        width auto

        @media screen and ( min-width $screen-md )
            border-bottom 1px solid $white

        &--active
            border-color $tiffany

            a
                color $tiffany


    // Select

    &__select
        display none

        &-item
            background $denim-blue
            border-bottom 1px solid $dusky-blue
            font-size 16px
            padding 10px $nav-arrow-width

        @media screen and ( max-width $screen-md )
            &--open
                display block
                width 100%

.index-section
    margin-bottom 30px
    padding-bottom 30px
    position relative

    &::after
        background $brown-grey
        bottom 0
        content ''
        height 1px
        left 50%
        position absolute
        transform translateX( -50% )
        width 245px

    &__title
        color $tiffany
        font-size 18px
        font-weight normal
        margin 0 0 30px
