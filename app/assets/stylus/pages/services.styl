.services
    &__page-header
        margin-bottom 75px
        padding-left 40px
        padding-right 40px

        @media screen and ( min-width $screen-md )
            padding-left 0
            padding-right 0

        .page-header--title
            color $black-light

    .page-section--content
        margin-bottom 40px

        @media screen and ( min-width $screen-md )
            margin-bottom 0

    &__header
        position relative
        margin-bottom 40px

        &::after
            background $dusky-blue
            content ""
            height 3px
            left 0
            top 50%
            position absolute
            transform translateY( -50% )
            width 100%

        &-image
            background $white
            margin 0 auto
            padding 0 10px
            position relative
            width 145px
            z-index 10
        
.page-template-services
    .site-content
        padding-top 'calc( 55px + %s )' % $sm-nav-height